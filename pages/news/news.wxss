/* pages/news/news.wxss */
.top{
  text-align: center;
  font-weight: bold;
  font-size: larger;
}
image{
  width: 100%;
  height: 100%;
}
.item{
  padding: 10rpx;
  margin: 10rpx;
  border-bottom: 1rpx solid lightgray;
  display: flex;
  font-size: 36rpx;
}
.item image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
}
.item > view:nth-child(2){
  line-height: 50rpx;
  color: rgb(48, 48, 48);
  margin-left: 20rpx;
}