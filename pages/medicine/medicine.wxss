.main{
  display: flex;
  width: 100%;
  height: 100%;
  background-color: #ffffff;
}

.left{
  display: flex;
  flex-direction: column;
  width: 200rpx;
  border-right: 1rpx solid #dcdcdc;
  text-align: center;
}

.left .type{
  border-bottom: 1rpx solid rgb(222, 222, 222);
  height: 100rpx;
  text-align: center;
  height: 110rpx;
  margin-top: 10rpx;
}

.category-name{
  display: inline-block;
  margin-top: 40rpx;
  font-size: 28rpx;
  line-height: 10rpx;
}
/* .type>.category-name .active{
  font-size: 32rpx;
  color:rgb(90, 172, 113);
} */
.active{
  font-size: 32rpx;
  color:rgb(90, 172, 113);
}

.right{
  display: flex;
  height: 100vh;
  flex-direction: column;
}
.content{
  margin-top: 40rpx;
}
.category-list{
  margin-top: 40rpx;
  height: auto;
}
.category-list:nth-child(1){
  margin-top: 0rpx;
}
.category-list .header{
  height: 60rpx;
  line-height: 40rpx;
  font-size: 50rpx;
  color: chocolate;
  text-align: center;
}

.medicine-list{
  border: 1rpx solid rgb(222,222,222);
  margin-top: 20rpx;
}

.medicine-list-item{
  display: flex;
  align-items: center;
  width: 600rpx;
  height: 150rpx;
  margin-bottom:10rpx;
  border: 1rpx solid rgb(222,222,222);

}
.medicine-list-item image{
  display: inline-block;
  margin: 25rpx;
  width: 250rpx;
  height: 250rpx;
  background-color: #dcdcdc;
}
.medicine-list-item text{
  display: inline-block;
  line-height: 150rpx;
  font-size: 50rpx;
  width:100%;
  margin-left: 50rpx;
}
