/* .wxss */
.search-bar {
  padding: 10rpx;
  background-color: #fff;
  display: flex;
}

.search-input {
  flex: 8;
  width: 100%;
  height: 60rpx;
  padding: 5px;
  border: 1px solid #ccc;
  border-radius: 5px;
  margin-right: 10rpx;
  margin-top: 6rpx;
}
.search-cancle{
 
  border: 1px solid;
  border-radius: 10px;
  text-align: center;
  justify-content: center;
  background-color: rgb(74, 207, 167);
}

.medicine-list {
  margin-top: 10px;
}

.medicine-list text {
  display: block;
  padding: 10px;
  background-color: #f5f5f5;
  border-radius: 5px;
  margin-bottom: 5px;
}